<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <style>
   body,html {
    padding: 0;
    margin: 0;
    background-color: black;
   }

   
   .navbar-brand img {
      width: 60px;
      height: 60px;
      border-radius: 100%;
   }

   .container-history {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
   }

   .container-history .box {
    width: 95%;
    height: 100vh;
    gap: 30px;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
   }

   #cb {
    display: flex;
    gap: 10px;
   }
   

    </style>
</head>
<body>

   

    <nav class="navbar bg-body-tertiary bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/home">
            <img src="gze.jpeg" alt="">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasNavbarLabel">GzeYtDownloader</h5>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/home">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/feedback" id="feedbackButton">Feedback</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/history" id="history">History</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

     

      <div class="container-history">
          <div class="box">
        
            <% res.forEach(element => { %>
                <div class="card" style="width: 90%; height:max-content; padding: 20px;">
                    <img src="<%= element.thumbnail %>" class="card-img-top" alt="..." style="width: 60%; transform: translate(30%); border-radius: 10px;">
                    <div class="card-body">
                      <h5 class="card-title"><%= element.title %></h5>
                      <p class="card-text"><%= element.description %></p>
                    </div>
                    <div class="card-body" id="cb">
                     <span>Waktu :</span> <p class="detik"> <%= element.time_video %> </p>
                    </div>
                </div>
    
            <% }) %>

    
          </div>
      </div>
   

      <script>
        const detik = document.querySelectorAll(".card-body .detik");
        detik.forEach(e => {
            const hasil = detikKeMenit(Number(e.innerHTML));
            e.innerHTML = hasil;
        })

        function detikKeMenit(detik) {
            // Hitung menit
            const menit = Math.floor(detik / 60);
            
            // Hitung sisa detik
            const sisaDetik = detik % 60;

            // Format hasil
            const hasil = `${menit}:${sisaDetik < 10 ? '0' : ''}${sisaDetik}`;

            return hasil;
  }






      </script>
    
</body>
</html>